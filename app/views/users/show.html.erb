<article>
  <%= render partial: "shared/user", locals: { user: @user } %>
  <div class="user_bio">
    <h2>Bio</h2>
    <p><%= @user.bio %></p>
  </div>
  <% @posts.each do |post| %>
    <%= render partial: "shared/post", locals: { post: post, show_full_post: false }  %>
  <% end %>
  <button class="btn"><%= link_to "See all posts", user_posts_path(@user) %></button>
</article>
