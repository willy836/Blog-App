<section class="add-comment">
  <%= render "shared/nav" %>
  <%= form_with model: @comment, url: user_post_comments_path, local: true, scope: :comment do |form| %>
    <div class="form-group">
      <%= form.label :text %>
      <%= form.text_field :text, placeholder: "Enter comment", class: "form-control" %>
    </div>
    <%= form.submit "Add comment", class: "btn submit-btn" %>
  <% end %>
</section>
