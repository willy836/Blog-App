<article class="post-article">
  <%= link_to user_post_path(post.author.id, post.id), class: "post_details" do %>
    <h2 class="post_title"><%= post.title %></h2>
    <% if (show_full_post) %>
      <p class="post_text"><%= post.text %></p>
    <% else %>
      <p class="post_text"><%= truncate(post.text, length:250, omission: "...") %></p>
    <% end %>
    <div class="post_stats">
      <p class="cmnt-cntr">Comments: <%= post.comments_counter || 0 %></p>
      <p class="likes-cntr">Likes: <%= post.likes_counter || 0 %></p>
    </div>
  <% end %>
  <% if can?(:destroy, post) %>
    <div class="del-post"><%= button_to "Delete Post", user_post_path(post.author.id, post.id), method: :delete, class: "btn" %></div>
  <% end %>
</article>
