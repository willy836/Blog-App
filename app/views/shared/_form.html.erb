<%= form_with model: @post, url: user_posts_path, local: true, scope: :post do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, placeholder: "Enter post title", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :text %>
    <%= form.text_area :text, placeholder: "Enter post text", class: "form-control text-area" %>
  </div>
  <%= form.submit "Submit", class: "btn submit-btn" %>
<% end %>
